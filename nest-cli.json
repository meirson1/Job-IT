{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": ".",
  "sourceRoot": ".",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {

    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/auth",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "file-service": {
      "type": "application",
      "root": "apps/file-service",
      "entryFile": "file-service.main",
      "sourceRoot": "apps/file-service/file",
      "compilerOptions": {
        "tsConfigPath": "apps/file-service/tsconfig.app.json"
      }
    },
    "indexer-service": {
      "type": "application",
      "root": "apps/indexer-service",
      "entryFile": "indexer-service.main",
      "sourceRoot": "apps/indexer-service/indexer",
      "compilerOptions": {
        "tsConfigPath": "apps/indexer-service/tsconfig.app.json"
      }
    },
    "jobs-service": {
      "type": "application",
      "root": "apps/jobs-service",
      "entryFile": "jobs-service.main",
      "sourceRoot": "apps/jobs-service/jobs",
      "compilerOptions": {
        "tsConfigPath": "apps/jobs-service/tsconfig.app.json",
        "webpack": true,
        "webpackConfigPath": "webpack.config.js"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
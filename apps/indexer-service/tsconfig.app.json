{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/indexer",
    "module": "nodenext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "baseUrl": "../../",
    "skipLibCheck": true
  },
  "include": ["indexer.src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
